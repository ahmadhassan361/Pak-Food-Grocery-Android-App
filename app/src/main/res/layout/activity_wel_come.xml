<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.WelComeActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rect08"
        android:layout_marginBottom="30sp"
        android:id="@+id/toolbarRl"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="180dp"
            android:src="@drawable/supermarket"
            android:layout_alignParentTop="true"
            android:transitionName="logo"
            android:layout_marginTop="20sp"
            android:id="@+id/iconIv"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WelCome"
            android:layout_below="@+id/iconIv"
            android:transitionName="logo_text"
            android:layout_centerHorizontal="true"
            android:id="@+id/signInFirst"
            android:textSize="25sp"
            android:fontFamily="@font/bungee"
            android:layout_marginBottom="10dp"
            android:layout_margin="10dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/bottom"
        >
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_bck"
            android:layout_margin="15dp"
            android:text="Login"
            android:layout_centerInParent="true"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:id="@+id/loginBtn"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Not Have an Account? Register Now"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:layout_marginBottom="30sp"
            android:layout_below="@+id/loginBtn"
            android:layout_centerHorizontal="true"
            android:id="@+id/account"
            />
        <LinearLayout
            android:layout_below="@+id/account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:gravity="bottom"
            android:layout_marginTop="10dp"
            >
            <Button
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:background="@drawable/button_bck2"
                android:text="User"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:id="@+id/clientBtn"
                android:layout_margin="10dp"
                android:textColor="@android:color/white"
                />

            <Button
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_bck2"
                android:layout_gravity="center_horizontal"
                android:text="Seller"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:id="@+id/sellerBtn"
                android:layout_margin="10dp"
                android:textColor="@android:color/white"
                />


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:textAlignment="gravity"
            android:layout_height="wrap_content"
            android:id="@+id/slogan"
            android:fontFamily="sans-serif-medium"
            android:layout_gravity="center_horizontal"
            android:text="Making Pakistan Proud"
            android:textColor="@android:color/black"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:textSize="15sp"
            android:layout_marginBottom="10dp"
            android:drawableStart="@drawable/ic_baseline_flag_24"
            android:drawablePadding="5dp"
            android:textStyle="bold" />


    </RelativeLayout>

</RelativeLayout>