<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rect01"
        >

        <com.blogspot.atifsoftwares.circularimageview.CircularImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_product_add"
            android:id="@+id/productIv"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/titleTv"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/productIv"
            android:layout_marginTop="5dp"
            android:text="Product Title"
            android:textColor="@color/colorWhite"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pQuntityTv"
            android:layout_centerHorizontal="true"
            android:text="Quntity "
            android:textSize="10sp"
            android:textColor="@color/colorWhite"
            android:layout_below="@+id/titleTv"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/descriptionTv"
            android:layout_centerHorizontal="true"
            android:text="product description "
            android:textColor="@color/colorWhite"
            android:layout_below="@+id/pQuntityTv"/>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/discountedNoteTv"
    android:layout_alignParentEnd="true"
    android:layout_margin="5dp"
    android:text="10% off"
    android:textColor="@color/colorGreen"
    android:padding="5dp"
    android:textSize="10sp"
    android:background="@drawable/shape_rect05"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="10sp">
        <TextView
            android:background="@drawable/shape_rect09"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/originalPriceTv"
            android:padding="10sp"
            android:text="$12"
            android:textAlignment="textStart"
            />
        <TextView
            android:background="@drawable/shape_rect09"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/priceDiscountedTv"
            android:layout_toEndOf="@+id/originalPriceTv"
            android:padding="10sp"
            android:text="$10"
            android:textAlignment="textStart"
            />
        <TextView
            android:background="@drawable/shape_rect09"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/finalPriceTv"
            android:padding="10sp"
            android:layout_alignParentEnd="true"
            android:text="Final price: "
            android:textAlignment="textStart"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="10sp"
        >
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/decrementBtn"

            android:layout_gravity="center_vertical"
            android:background="@null"
            android:src="@drawable/ic_remove_black"


            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/quantityTv"
            android:text="1"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            android:textSize="18sp"
            android:layout_marginEnd="8dp"
            />


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/incrementBtn"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:src="@drawable/ic_add_black"


            />





    </LinearLayout>
    <Button
        android:id="@+id/continueBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:background="@color/colorPrimaryDark"
        android:padding="5dp"
        android:text="Add To Cart"
        android:textColor="@color/colorWhite"
        android:textAllCaps="false"
        />


</LinearLayout>