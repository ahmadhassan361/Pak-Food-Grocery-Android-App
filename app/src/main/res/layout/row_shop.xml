<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="3dp"
    android:background="@android:color/white"
    app:contentPadding="5dp">
    <RelativeLayout
        android:background="@drawable/shape_rect09"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        >

        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/shopIv"
            android:layout_marginEnd="5dp"
            android:src="@drawable/ic_store_gray"
            app:riv_corner_radius="10dp"
            android:scaleType="fitCenter"
            />
        <ImageView
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:id="@+id/onlineIv"
            android:src="@drawable/circle_03"
            />
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/shopClosedTv"
        android:layout_toStartOf="@+id/nextIv"
        android:padding="5dp"
        android:background="@drawable/shap_rect06"
        android:text="Closed"
        android:textSize="10sp"
        android:textStyle="bold"
        android:textColor="@color/colorRed"
        />
        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/shopIv"
            android:layout_toStartOf="@+id/nextIv"

            >

            <TextView
                android:id="@+id/shopnameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:maxLines="1"
                android:text="Shop Name"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:textSize="24sp"
                />
            <TextView
                android:id="@+id/phoneTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="Shop Phone"
                android:textColor="@color/colorBlack"
                android:textStyle="normal"
                />
            <TextView
                android:id="@+id/addressTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textColor="@color/colorBlack"
                android:textStyle="normal"
                />
            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ratingBar"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:numStars="5"
                android:rating="3.5"
                android:layout_gravity="end"
                />







        </LinearLayout>

        <ImageView
            android:id="@+id/nextIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_next_gray"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"


            />




    </RelativeLayout>



</androidx.cardview.widget.CardView>